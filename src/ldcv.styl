.ldcv
  position: fixed
  top: 0
  left: 0
  //- ? even with visibility: hidden, sometimes nodes under ldcv are still not clickable
  //- ? if there are content inside ldcv. so, we use z-index too to control it's z order
  z-index: 999
  width: 100%
  height: 100%
  opacity: 0
  perspective: 1024px
  transition: all 0.2s ease-in-out
  visibility: hidden
  &:before
    content: " "
    display: block
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,.5)

.ldcv.no-shadow:before, .ldcv.bare:before
  display: none


.ldcv.bare
  position: absolute
  width: auto
  height: auto

.ldcv.bare > .base
  transform: initial

.ldcv.running
  visibility: visible

.ldcv.active
  visibility: visible
  opacity: 1

.ldcv > .base > .inner
  width: 100%
  height: 100%
  overflow-y: scroll
  overflow-x: hidden
  border-radius: 5px
  box-shadow: 0 4px 8px rgba(0,0,0,.3)
  background: #fff
  padding: 0
  transform-origin: 50% 50%
  transition: all 0.2s ease-in-out
  & > .foot
    padding: 15px
    margin-top: 15px
    border-top: 1px solid #ddd

// transform might lead to blurry ontent;
// we force remove it since when shown there should be no transform over .inner.
.ldcv.shown > .base > .inner
  transform: none!important

.ldcv > .base 
  position: absolute
  z-index: index(order, 'ldcv-base')
  width: 640px
  height: 600px
  max-width: 80%
  max-height: 80%
  top: 0
  left: 0
  bottom: 0
  right: 0
  margin: auto
  transform: initial
  perspective: 300px

.ldcv.transform-center > .base
  left: 50%
  top: 50%
  transform: translate(-50%,-50%)

.ldcv.bare > .base
  width: auto
  height: auto
  max-width: initial
  max-height: initial

.ldcv.bare > .base > .inner
  overflow: visible

// animation types
// default
/*
.ldcv > .base > .inner
  transform: scaleX(0.9) translateY(-40px)
.ldcv.active > .base. > .inner
  transform: scaleX(1.0) translateY(0)
*/

// flip
.ldcv > .base > .inner
  transform: scaleX(0.9) rotateX(90deg)
  transition: transform 0.3s ease-in-out
.ldcv.active > .base > .inner
  transform: scaleX(1.0) rotateX(0deg)

.ldcv.lg > .base
  width: 960px
  height: 700px

.ldcv.md > .base
  width: 720px
  height: 500px
